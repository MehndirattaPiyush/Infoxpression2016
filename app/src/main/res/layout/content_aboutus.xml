<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:id="@+id/scrollViewabout">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/about_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorbackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.satyamsehgal.infoxpression2016.Aboutus"
        tools:showIn="@layout/activity_aboutus"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/about_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="t2lkhl"
            android:textColor="@color/colortexthome"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/about_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/about_heading"
            android:breakStrategy="balanced"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="k;l;l"
            android:textColor="@color/colorwhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about_organize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/about_text1"
            android:text="Organised By..."
            android:textColor="@color/colortexthome"
            android:textSize="24sp" />


        <Button
            android:id="@+id/usict"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/about_organize"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:padding="12dp"
            android:gravity="fill_vertical"
            android:text="USICT"
            android:textColor="@color/colorwhite"
             />

        <Button
            android:id="@+id/techspace"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/usict"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:padding="12dp"
            android:text="Techspace | The Geek Soc"
            android:gravity="fill_vertical"
            android:textColor="@color/colorwhite" />

        <Button
            android:id="@+id/ecell"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/techspace"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:padding="12dp"
            android:gravity="fill_vertical"
            android:text="Entrepreneurship Cell, USICT"
            android:textColor="@color/colorwhite" />

        <Button
            android:id="@+id/ieee"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/ecell"
            android:layout_marginTop="12dp"
            android:gravity="fill_vertical"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:padding="12dp"
            android:text="IEEE Student Branch, USICT"
            android:textColor="@color/colorwhite" />

        <Button
            android:id="@+id/ieeestudent"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/ieee"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:padding="12dp"
            android:gravity="fill_vertical"
            android:text="IETE Student Forum, USICT"
            android:textColor="@color/colorwhite" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ieeestudent" />
    </RelativeLayout>
</ScrollView>