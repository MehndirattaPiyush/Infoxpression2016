<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="INFOXPRESSION 2016"
            android:id="@+id/minfotext"
            android:textColor="#FFffffff"
            android:textSize="24dp"
            android:padding="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maintext1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="TECHFEST | USICT"
            android:textColor="@color/colortexthome"
            android:textSize="18dp"
            android:padding="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/maintext2"
            android:gravity="center"
            android:text="SEPT 2nd-4th 2016"
            android:textColor="@color/colortexthome"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/maintext3"
            android:text="CELEBRATING THE SENSE OF BELONGINESS"
            android:textColor="@color/colortexthome"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="35dp"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_instructions"
            android:layout_marginTop="12dp"
            android:text="DOWNLOAD IMPORTANT INSTRUCTIONS"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:padding="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.7"
            android:background="#40000000"
            />

    </LinearLayout>
</RelativeLayout>
